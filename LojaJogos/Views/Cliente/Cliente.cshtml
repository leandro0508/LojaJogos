@model LojaJogos.Models.Cliente
@{
    ViewBag.Title = "Cliente";
}

<br />

<h2>Cadastro de Clientes</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dados do Cliente</legend>
        <div class="editor-label">
            Nome
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClienteNome)
            @Html.ValidationMessageFor(model => model.ClienteNome)
        </div>

        <div class="editor-label">
            CPF
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClienteCPF)
            @Html.ValidationMessageFor(model => model.ClienteCPF)
        </div>

        <div class="editor-label">
            Data de Nascimento
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClieDtNasc)
            @Html.ValidationMessageFor(model => model.ClieDtNasc)

        </div>

        <div class="editor-label">
            Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClienteEmail)
            @Html.ValidationMessageFor(model => model.ClienteEmail)

        </div>

        <div class="editor-label">
            Número do Celular
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ClienteCel)
            @Html.ValidationMessageFor(model => model.ClienteCel)

        </div>

        <div class=" editor-label">
            Endereço
        </div>
        <div class=" editor-field">
            @Html.EditorFor(model => model.ClienteEnd)
            @Html.ValidationMessageFor(model => model.ClienteEnd)
        </div>
        <br />

        <p><input type="submit" value="Cadastrar" /></p>
    </fieldset>
}
